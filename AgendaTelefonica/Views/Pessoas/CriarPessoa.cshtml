@model AgendaTelefonica.Models.Pessoa

@{
    ViewData["Title"] = "NovoContato";
}

<h1>Novo Contato</h1>

<div>
    @if (TempData["CPFDuplicado"] != null)
    {
        <p class="alert alert-danger">@TempData["CPFDuplicado"].ToString()</p>
    }
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CriarPessoa">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" id="cpf" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" id="telefone" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoTelefone" class="control-label"></label>
                <select asp-for="TipoTelefone" class="form-control" asp-items="Html.GetEnumSelectList<TipoTelefone>()"></select>
                <span asp-validation-for="TipoTelefone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <select asp-for="Cidade" class="form-control" asp-items="Html.GetEnumSelectList<Cidade>()"></select>
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DataHoraCadastro" class="form-control" />
                <span asp-validation-for="DataHoraCadastro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-success" /> &emsp;
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            $("#telefone").mask('(99) 99999-9999');
        });
    </script>

    <script>
        $(document).ready(function () {
            $("#cpf").mask('999.999.999-99')
        });
    </script>

}